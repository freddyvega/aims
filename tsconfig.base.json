{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "lib": ["es2022", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@backend/*": ["apps/backend/src/*"],
        "@frontend/*": ["apps/frontend/src/*"]
      }
    }
  }